<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for Hardened Runtime -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory for WebView -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Required for dynamic libraries -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- Critical for PyInstaller Python.framework -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- File access permissions -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Network client for potential future features -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Device access for secure key storage -->
    <key>com.apple.security.device.audio-input</key>
    <false/>
    <key>com.apple.security.device.camera</key>
    <false/>
    
    <!-- Print capability -->
    <key>com.apple.security.print</key>
    <true/>
</dict>
</plist>