{
  "name": "barqly-vault",
  "version": "0.1.0",
  "description": "Secure file encryption for Bitcoin custody - Desktop Application",
  "workspaces": [
    "src-ui"
  ],
  "scripts": {
    "ui": "npm run dev --prefix src-ui",
    "build": "npm run build --prefix src-ui",
    "preview": "npm run preview --prefix src-ui",
    "lint": "npm run lint --prefix src-ui",
    "fmt": "cd src-ui && npx prettier --write .",
    "app": "cd src-tauri && cargo tauri dev",
    "app-build": "cd src-tauri && cargo tauri build",
    "app-preview": "cd src-tauri && cargo tauri preview",
    "rust-lint": "cd src-tauri && cargo clippy",
    "rust-fmt": "cd src-tauri && cargo fmt",
    "ui:capture": "node scripts/ui-capture/capture-ui.js",
    "ui:capture:setup": "cd scripts/ui-capture && npm install",
    "ui:analyze": "node scripts/ui-capture/capture-ui.js --analyze-only"
  },
  "devDependencies": {},
  "overrides": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
